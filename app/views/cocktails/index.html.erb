





<div class="container">
    <div class="row">
      <div class="content align-text-top">
        <h1>CockTails</h1>
        <h2>Nome dos cocktails:</h2>
      </div>

        <p><%= @ingredient %></p>
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://picsum.photos/200/300/?random');">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
            <%= link_to '', cocktail_path(cocktail.id), class: "card-link" %>
          </div>
            <%= link_to "Delete", cocktail_path(cocktail) ,
            method: :delete,
            data: {confirm: "are you sure?" }%>
        </div>
            <br>
            <br>
      <% end %>
    </div>
</div>
